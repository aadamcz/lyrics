  "bugs": {
    "url": "https://github.com/aadamcz/lyrics/issues"
  },
  "homepage": "https://github.com/aadamcz/lyrics#readme",
  "dependencies": {
    "browser-sync": "^2.18.13",
    "glob-run": "^0.1.6"
  },
  "devDependencies": {
    "node-sass": "^4.7.1",
    "nodemon": "^1.12.1",
    "parallelshell": "^3.0.2"
  }
}
