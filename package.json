  },
  "homepage": "https://github.com/aadamcz/lyrics#readme",
  "dependencies": {
    "browser-sync": "^2.18.13",
    "glob-run": "^0.1.6"
  },
  "devDependencies": {
    "parallelshell": "^3.0.2"
  }
}
